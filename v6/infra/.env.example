# AWS CDK Infrastructure Configuration
# This file defines infrastructure parameters for AWS CDK deployment
# Use this with: cdk deploy -c environment=dev (or prod)

# ===============================
# AWS Credentials (Required for deployment)
# ===============================
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ===============================
# Environment
# ===============================
ENVIRONMENT=dev
AWS_REGION=us-east-1

# ===============================
# VPC Configuration
# ===============================
VPC_CIDR=10.0.0.0/16
ENABLE_NAT=true

# ===============================
# Database Configuration
# ===============================
ENABLE_DATABASE=true
DATABASE_INSTANCE_TYPE=t3.micro
DATABASE_ALLOCATED_STORAGE=20
DATABASE_BACKUP_RETENTION_DAYS=7
DATABASE_MULTI_AZ=false

# ===============================
# Cache Configuration
# ===============================
ENABLE_CACHE=true
CACHE_INSTANCE_TYPE=cache.t3.micro
CACHE_NUM_NODES=1

# ===============================
# ECS Configuration
# ===============================
ECS_CLUSTER_NAME=stock-debate-dev
ECS_CONTAINER_INSIGHTS=true

# ===============================
# S3 Configuration
# ===============================
S3_VERSIONING_ENABLED=false
S3_LIFECYCLE_TRANSITION_DAYS=30

# ===============================
# Production Overrides
# ===============================
# For prod deployment, uncomment and set:
# ENVIRONMENT=prod
# DATABASE_INSTANCE_TYPE=t3.small
# DATABASE_ALLOCATED_STORAGE=100
# DATABASE_BACKUP_RETENTION_DAYS=30
# DATABASE_MULTI_AZ=true
# CACHE_INSTANCE_TYPE=cache.t3.small
# CACHE_NUM_NODES=3
# S3_VERSIONING_ENABLED=true
# S3_LIFECYCLE_TRANSITION_DAYS=60

