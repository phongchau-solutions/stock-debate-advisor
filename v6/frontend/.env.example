# Frontend Environment Configuration

# API Configuration (Backend API Bridge at port 8000)
VITE_API_BASE_URL=http://localhost:8000/api
VITE_DATA_SERVICE_URL=http://localhost:8000/api
VITE_AGENTIC_SERVICE_URL=http://localhost:8000/api
VITE_ANALYSIS_SERVICE_URL=http://localhost:8000/api

# Environment
VITE_ENV=development

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_API=false

# Timeouts (in ms)
VITE_REQUEST_TIMEOUT=30000
VITE_DEBATE_TIMEOUT=120000

# UI Configuration
VITE_ENABLE_MATERIAL_DESIGN_3=true
VITE_THEME_MODE=light
