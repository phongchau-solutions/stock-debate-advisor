# Environment Variables for v6 Stock Debate System

# ======================
# API Keys
# ======================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# Database Configuration
# ======================
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/stock_debate_data
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DB=stock_debate

# ======================
# Service URLs
# ======================
DATA_SERVICE_URL=http://data-service:8001
ANALYSIS_SERVICE_URL=http://analysis-service:8002

# ======================
# LLM Configuration
# ======================
LLM_MODEL=gemini-1.5-pro
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ======================
# Debate Configuration
# ======================
DEBATE_ROUNDS=3
MAX_DEBATE_DURATION=600
AGENT_TIMEOUT=60

# ======================
# MCP Configuration
# ======================
MCP_ENABLED=false
MCP_SERVER_URL=

# ======================
# Airflow Configuration
# ======================
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres:postgres@postgres:5432/airflow
