# ===== Server Configuration =====
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# ===== Data Service Configuration =====
# URL to Python Data Service (internal communication)
# IMPORTANT: Changed from localhost:8001 to localhost:8000
DATA_SERVICE_URL=http://localhost:8000
API_TIMEOUT=30000

# ===== AI Service Configuration =====
AI_SERVICE_URL=http://localhost:8003

# ===== Authentication Configuration =====
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# ===== CORS Configuration =====
# Frontend domain(s) that can access this API
# For development: http://localhost:3000
# For production: https://yourdomain.com
# IMPORTANT: Changed from '*' to 'http://localhost:3000' for security
CORS_ORIGIN=http://localhost:3000
ENABLE_CORS=true

# ===== Rate Limiting Configuration =====
# Time window for rate limiting (in milliseconds, default: 900000 = 15 min)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (authenticated: 100, unauthenticated: 50)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PER_USER=true

# ===== Logging Configuration =====
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_LOGGING=true
INCLUDE_REQUEST_IN_LOGS=false

# ===== Security Configuration =====
ENABLE_VALIDATION=true

# ===== Production Notes =====
# For production deployment:
# 1. Generate strong JWT_SECRET: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 2. Set NODE_ENV=production
# 3. Update CORS_ORIGIN to your actual frontend domain
# 4. Use HTTPS URLs for all services
# 5. Configure proper database and Redis for distributed rate limiting
