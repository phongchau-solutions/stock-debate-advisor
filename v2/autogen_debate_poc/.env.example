# Environment variables for the Autogen Financial Debate POC
# Copy this file to .env and fill in your API keys

# Google Gemini API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Vietcap API Key (Optional - will use demo data if not provided)
VIETCAP_API_KEY=your_vietcap_api_key_here

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
PYTHONPATH=/app

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Debate Configuration
DEFAULT_MAX_ROUNDS=5
DEFAULT_STOCK_SYMBOL=VNM
DEFAULT_ANALYSIS_PERIOD=30days

# Data Source Configuration
USE_DEMO_DATA=true
ENABLE_REAL_CRAWLING=false