# Stock Debate Advisor v7 Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_ACCOUNT_ID

# Environment
ENVIRONMENT=dev

# API Configuration
API_TIMEOUT=900
API_VERSION=v1

# Frontend Configuration
VITE_API_URL=http://localhost:8001/api
VITE_APP_NAME=Stock Debate Advisor

# Lambda Configuration
LAMBDA_MEMORY=1024
LAMBDA_TIMEOUT=900

# DynamoDB Configuration
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
DYNAMODB_TTL_HOURS=24

# Gemini API (set in Secrets Manager, not here!)
# GEMINI_API_KEY=your-key-here

# Cognito Configuration
COGNITO_PASSWORD_MIN_LENGTH=8
COGNITO_REQUIRE_UPPERCASE=true
COGNITO_REQUIRE_DIGITS=true

# S3 Configuration
S3_FRONTEND_BUCKET_ENCRYPTION=S3_MANAGED

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS=PriceClass_100
CLOUDFRONT_HTTP_VERSION=http2
